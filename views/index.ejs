<main class="form-signin">
  <form id="sign-in" action="/login" method="post">
    <img class="mb-4" src="img/s.png" alt="" width="50%" height="50%">
    <h1 class="h3 mb-3 fw-normal">Smart Notice Board</h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" name="username" placeholder="name@example.com">
      <label for="floatingInput">Username</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>

    
    <button  class="w-100 btn btn-lg btn-primary">Sign in</button>
    <div class="toast align-items-center <%= flag===true?'show':'' %>  my-3" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
        Username or Password is wrong!
       </div>
        <!-- <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button> -->
      </div>
    </div>
